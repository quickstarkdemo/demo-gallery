# Application Environment Variables
# Copy this file to .env and fill in your values

# API Configuration
VITE_API_URL=http://localhost:8000

# Environment
VITE_ENVIRONMENT=development

# Datadog Configuration
VITE_DATADOG_APPLICATION_ID=your-application-id
VITE_DATADOG_CLIENT_TOKEN=your-client-token
VITE_DATADOG_SITE=datadoghq.com
VITE_DATADOG_SERVICE=demo-gallery

# Version Management
# VITE_RELEASE is automatically injected from VERSION file + git SHA
# Managed by vite.config.js versionInjectionPlugin()
# Format: VERSION-SHA (e.g., 1.0.0-abc1234)
# Do not set VITE_RELEASE manually - edit VERSION file instead

# Authentication Settings
VITE_USE_AUTH=false  # Set to "true" if API requires authentication
VITE_AUTH_USERNAME=   # Only needed if VITE_USE_AUTH=true
VITE_AUTH_PASSWORD=   # Only needed if VITE_USE_AUTH=true

# Gemini API Configuration
VITE_GEMINI_API_KEY=your_gemini_api_key
